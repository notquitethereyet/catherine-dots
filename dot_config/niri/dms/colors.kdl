layout {
    background-color "transparent"

    focus-ring {
        active-color   "#8cd5b4"
        inactive-color "#89938d"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#8cd5b4"
        inactive-color "#89938d"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#8cd5b4"
        inactive-color "#89938d"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#8cd5b480"
    }
}